pipeline {
    agent{
        label "jenkins-agent"
    }

    environment {
        DOCKER_BUILDKIT = 1
    }

    stages {

        stage('Checkout from SCM') {
            steps {
                git branch: 'master', credentialsId: 'github', url: 'https://github.com/MaxNickerson/react-go-webapp'
            }
        }

        stage('Cleanup Workspace and Containers') {
            steps {
                cleanWs()
                script {
                    // Navigate to the directory containing the docker-compose.yml file
                    dir('.') {
                        sh 'docker-compose down || true'
                        sh 'docker system prune -f --volumes || true'
                    }
                }
            }
        }

        stage('Build and Test Backend') {
            steps {
                script {
                    dir('backend') {
                        sh 'docker-compose up --build --abort-on-container-exit backend'
                    }
                }
            }
        }

        stage('Build and Test Frontend') {
            steps {
                script {
                    dir('frontend') {
                        sh 'docker-compose up --build --abort-on-container-exit frontend'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('.') {
                        sh 'docker-compose up -d'
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }

}