pipeline {
    agent{
        label "jenkins-agent"
    }

    environment {
        DOCKER_BUILDKIT = 1
    }

    stages {


        stage('Cleanup Workspace and Containers') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from SCM') {
            steps {
                git branch: 'master', credentialsId: 'github', url: 'https://github.com/MaxNickerson/react-go-webapp'
            }
        }

         stage('Build and Test FrontEnd and Backend') {
            steps {
                script {
                    // Build all services and run tests
                    sh 'docker-compose up --build'
                }
            }
        }

        stage('Check Container Health') {
            steps {
                script {
                    sh 'docker ps -a'
                    sh 'docker logs react-go-webapp_backend_1'
                    sh 'docker logs react-go-webapp_frontend_1'
                }
            }
        }

    }

    post {
        always {
            cleanWs()
        }
        script {
            // Clean up any containers and volumes
            sh 'docker-compose down || true'
            sh 'docker system prune -f --volumes || true'
        }

    }

}