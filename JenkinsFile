pipeline {
    agent{
        label "jenkins-agent"
    }

    environment {
        DOCKER_BUILDKIT = 1
        SONARQUBE_HOST = 'http://localhost:9000'
        SONARQUBE_LOGIN = credentials('jenkins-sonarqube')
    }

    stages {

        stage('Cleanup Workspace and Containers') {
            steps {
                cleanWs()
                script {
                    try {
                        sh 'docker-compose down'
                    } catch (Exception e) {
                        echo 'No containers to stop'
                    }
                }
                sh 'docker system prune -f --volumes'
            }
        }



        stage('Checkout from SCM') {
            steps {
                git branch: 'master', credentialsId: 'github', url: 'https://github.com/MaxNickerson/react-go-webapp'
            }
        }

        stage('Build Frontend and Backend') {
            steps {
                sh 'docker-compose build'
                
            }
        }

        stage('Run SonarQube Analysis') {
            steps {
                script {
                    sh """
                        sonar-scanner \
                        -Dsonar.projectKey=your-project-key \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=${SONARQUBE_HOST} \
                        -Dsonar.login=${SONARQUBE_LOGIN}
                    """
                }
            }
        }



        

    }

    post {
        always {
            cleanWs()
        }

    }

}